struct ProgressEvent;

class Ecordova.DirectoryReader (Eo.Base) {
    [[An interface that lists the files and directories in a directory.]]
    legacy_prefix: null;
    methods {
        @property native {
            [[Custom Ecordova_DirectoryReader native property.

              @since 2.3
            ]]
            values {
                native: const(char)* @optional;
            }
        }
        entries_read {
            [[Returns a list of entries from a directory.]]
        }
    }
    implements {
        Eo.Base.constructor;
        Eo.Base.destructor;
    }
    constructors {
        .native;
    }
    events {
        success: const(list<Ecordova.Entry*>*); [[called with a list of entries]]
        error: const(Ecordova_FileError)*; [[called with a FileError]]
    }
}
