            hbar: Efl.Ui.Scrollbar_Mode; [[Horizontal scrollbar]]
            vbar: Efl.Ui.Scrollbar_Mode; [[Vertical scrollbar]]
         }
      }
	  @property size {
		 get {
		 }
		 values {
			width: double;
			height: double;
		 }
	  }
	  @property position {
		 set {
		 }
		 get {
		 }
		 values {
			posx: double;
			posy: double;
		 }
	  }
	  visibility_update {
	  }
   }
   events {
      bar,press; [[Called when bar is pressed]]
      bar,unpress; [[Called when bar is unpressed]]
