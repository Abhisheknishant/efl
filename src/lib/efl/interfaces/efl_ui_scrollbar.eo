enum Efl.Ui.Scrollbar_Mode
{
   auto = 0, [[Visible if necessary]]
   on, [[Always visible]]
   off, [[Always invisible]]
   hidden, [[Visible when user input occurs]]
   last [[]]
}

enum Efl.Ui.Scrollbar_Direction
{
   horizontal = 0,
   vertical,
   last
}
interface Efl.Ui.Scrollbar ()
{
   methods {
      @property mode {
         [[Scrollbar visibility policy]]
